# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fintweet

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# External Services
TWEET_AGENT_URL=http://localhost:8000
ML_CLASSIFIER_URL=http://localhost:8001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
TWEET_FETCH_INTERVAL=*/5 * * * *  # Every 5 minutes
STOCK_UPDATE_INTERVAL=*/15 * * * *  # Every 15 minutes

# Logging
LOG_LEVEL=info

